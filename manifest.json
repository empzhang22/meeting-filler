{
    "manifest_version": 3,
    "name": "When2Meet Auto Clicker",
    "version": "1.0",
    "description": "Auto-selects all time slots on When2Meet",
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": ["*://www.when2meet.com/*"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "window.html",
        "default_icon": "favicon.ico"
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}
